
RUNTIME_MODULES =   \
  builderOps        \
  bytesStorage      \
  cArray            \
  codecs            \
  farPointer        \
  fragmentBuffer    \
  innerArray        \
  iO                \
  listPointer       \
  listStorageType   \
  message           \
  messageSig        \
  messageStorage    \
  otherPointer      \
  packing           \
  pointer           \
  rpc               \
  structPointer     \
  util

INSTALL_FILES = \
  capnpRuntime.cmi \
  capnpRuntime.cmo \
  capnpRuntime.cmx \
  capnp.cmi \
  capnp.cmo \
  capnp.cmx \
  libcapnp.cma  \
  libcapnp.cmxa \
  libcapnp.cmxs \
  libcapnp.a \
  capnp.ml \
  codecs.mli \
  cArray.mli \
  iO.mli \
  message.mli \
  messageSig.ml \
  messageStorage.ml \
  META

libcapnp.cmxs: libcapnp.cmxa
	ocamlfind ocamlopt -shared -linkall -o $@ $<

OCamlLibrary(libcapnp, capnp capnpRuntime)

OCamlPackage(capnpRuntime, $(RUNTIME_MODULES))
OCAMLFLAGS += -for-pack CapnpRuntime

.PHONY: runtime-clean runtime-distclean runtime-install runtime-uninstall

runtime-clean:
	rm -f *.cmi *.cmo *.cmx *.cma *.cmxa *.cmxs *.a *.o

runtime-distclean: runtime-clean
	rm -f *.omc

runtime-install: $(INSTALL_FILES)
	ocamlfind install capnp $(INSTALL_FILES)

runtime-uninstall:
	ocamlfind remove capnp

